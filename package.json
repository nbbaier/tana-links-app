{
  "name": "tana-links-app",
  "module": "src/app.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.23.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "generate": "bunx drizzle-kit generate",
    "migrate:prod": "bunx drizzle-kit migrate",
    "migrate:dev": "NODE_ENV bunx drizzle-kit migrate",
    "seed": "VALTOWN=$VALTOWN NODE_ENV=test touch ./local.db && bun run generate && bun run migrate:dev && bun src/db/seed.ts"
  },
  "dependencies": {
    "@libsql/client": "^0.7.0",
    "@libsql/sqlite3": "^0.3.1",
    "drizzle-orm": "^0.32.0"
  }
}